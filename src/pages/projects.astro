---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';

const projects = (await Astro.glob('./project/**/*.md'))
	.filter(({ frontmatter }) => !!frontmatter.publishDate)
	.sort(
		(a, b) =>
			new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf()
	);
---

<html lang="en">
	<head>
		<MainHead
			title="All Projects | Gor ArakelyaN"
			description="Learn about Gor ArakelyaN's most recent projects"
		/>
		<style>
			@import url(https://fonts.googleapis.com/css?family=Montserrat:100,200,300,regular,500,600,700,800,900,100italic,200italic,300italic,italic,500italic,600italic,700italic,800italic,900italic);
			.grid {
				display: grid;
				grid-gap: 3rem;
			}
			.title {
				margin-top: 2rem;
				margin-bottom: 2rem;
			}


.frame {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 500px;
  height: 800px;
  margin-top: -200px;
  margin-left: -200px;
  overflow: hidden;
  background: #212121;
  color: rgb(255, 255, 255);
  font-family: 'Open Sans', Helvetica, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-family: Montserrat;
}

.center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200px;
  height: 200px;
}

.ring {
  position: absolute;
  width: 200px;
  height: 200px;
  border: 1px solid #fff;
  border-radius: 50%;
}

.r1 {
  animation: ring-animation 5s ease-in-out 0.5s infinite;
}

.r2 {
  animation: ring-animation 5s ease-in-out 0.6s infinite;
}

.r3 {
  animation: ring-animation 5s ease-in-out 0.7s infinite;
}

.r4 {
  animation: ring-animation 5s ease-in-out 0.8s infinite;
}

.r5 {
  animation: ring-animation 5s ease-in-out 0.9s infinite;
}

.r6 {
  animation: ring-animation 5s ease-in-out 1s infinite;
}

.r7 {
  animation: ring-animation 5s ease-in-out 1.1s infinite;
}

.r8 {
  animation: ring-animation 5s ease-in-out 1.2s infinite;
}

.r9 {
  animation: ring-animation 5s ease-in-out 1.3s infinite;
}

.r10 {
  animation: ring-animation 5s ease-in-out 1.4s infinite;
}

@keyframes ring-animation {
  0% {
    transform: rotateX(0) rotateY(0) rotateZ(0);
  }

  100% {
    transform: rotateX(360deg) rotateY(-360deg) rotateZ(0);
  }
}

		</style>
	</head>
	<body>
		<Nav />
		<div class="wrapper">
			<h1 class="title">All Projects</h1>
			<div class="grid">
				{projects.map((project) => <PortfolioPreview project={project} />)}
			</div>
		</div>
		<Footer />
		<div class="frame">
			<div class="center">
			  <div class="ring r1">HTML</div>
			  <div class="ring r2">JS</div>
			  <div class="ring r3">CSS</div>
			  <div class="ring r4">REACT</div>
			  <div class="ring r5">TYPESCRIPT</div>
			  <div class="ring r6">SCSS</div>
			  <div class="ring r7"></div>
			  <div class="ring r8"></div>
			  <div class="ring r9"></div>
			  <div class="ring r10"></div>
			</div>
		  </div>
	</body>
</html>
